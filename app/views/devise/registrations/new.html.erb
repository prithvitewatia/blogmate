<div class="max-w-md mx-auto mt-8">
  <h2 class="text-2xl font-semibold mb-6">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="space-y-2">
      <%= f.label :email, class: "block text-sm font-medium text-gray-600" %>
      <%= f.email_field :email, class: "border p-2 w-full", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="mb-4">
      <%= f.label :username, class: 'block text-gray-700 text-sm font-medium mb-2' %>
      <%= f.text_field :username, autofocus: true, class: 'form-input block w-full mt-1' %>
      <small>Username cannot be edited later</small>
    </div>

    <div class="space-y-2">
      <%= f.label :password, class: "block text-sm font-medium text-gray-600" %>
      <% if @minimum_password_length %>
        <p class="text-xs text-gray-500"><em>(<%= @minimum_password_length %> characters minimum)</em></p>
      <% end %>
      <%= f.password_field :password, class: "border p-2 w-full", autocomplete: "new-password" %>
    </div>

    <div class="space-y-2">
      <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-600" %>
      <%= f.password_field :password_confirmation, class: "border p-2 w-full", autocomplete: "new-password" %>
    </div>

    <div class="mt-6">
      <%= f.submit "Sign up", class: "bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
