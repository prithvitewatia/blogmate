<div class="max-w-md mx-auto mt-8">
  <h2 class="text-2xl font-semibold mb-6">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
    <div class="space-y-2">
      <%= f.label :email, class: "block text-sm font-medium text-gray-600" %><br />
      <%= f.email_field :email, class: "border p-2 w-full", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="space-y-2">
      <%= f.label :password, class: "block text-sm font-medium text-gray-600" %><br />
      <%= f.password_field :password, class: "border p-2 w-full", autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="flex items-center space-x-2">
        <%= f.check_box :remember_me, class: "text-blue-500" %>
        <%= f.label :remember_me, class: "text-sm text-gray-600" %>
      </div>
    <% end %>

    <div class="mt-6">
      <%= f.submit "Log in", class: "bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
